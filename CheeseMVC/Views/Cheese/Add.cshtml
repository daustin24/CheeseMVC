@model CheeseMVC.Models.ViewModels.AddCheeseViewModel

<h1>Add Cheese</h1>

<form asp-controller="Cheese" asp-action="Add" method="post">

  <div class="form-group">
    <label asp-for="Name">Name
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </label>
  </div>

  <div class="form-group">
    <label asp-for="Description">Description
        <input class="form-control" asp-for="Description"/>
        <span asp-validation-for="Description"></span>
    </label>
  </div>

  <div class="form-group">
      <label asp-for="CategoryID">Category
          <select asp-for="CategoryID" asp-items="Model.Categories"></select>
      </label>
  </div>

  <div class="form-group">
      <label asp-for="Rating">Rating
         <input class="form-control" asp-for="Rating"/>
         <span asp-validation-for="Rating"></span>
      </label>
  </div>

    <input type="submit" value="Add Cheese"/>
</form> 
