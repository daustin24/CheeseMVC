@{
}

@model CheeseMVC.Models.ViewModels.AddEditCheeseViewModel

<h1>Edit Cheese @Model.Name (id=@Model.CheeseId)</h1> 

<form method="post">
  <input type="hidden" value="@Model.CheeseId" name="CheeseId" />

  <div class="form-group">
    <label asp-for="Name">
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </label>
  </div>

  <div class="form-group">
    <label asp-for="Description">
        <input class="form-control" asp-for="Description"/>
        <span asp-validation-for="Description"></span>
    </label>
  </div>

  <div class="form-group">
      <label asp-for="CategoryID">
          <select asp-for="CategoryID" asp-items="Model.Categories"></select>
      </label>
  </div>

  <div class="form-group">
      <label asp-for="Rating">
         <input class="form-control" asp-for="Rating"/>
         <span asp-validation-for="Rating"></span>
      </label>
  </div>
  <input type="submit" value="Edit Cheese"/>

</form>
